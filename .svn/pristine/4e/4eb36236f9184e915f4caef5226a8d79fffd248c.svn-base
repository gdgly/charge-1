<script type="text/javascript">
      //刷新验证码
      function changeImg(_this){  
    	  $(_this).attr("src", "/admin/draw?t="+new Date().getTime());
      }
     </script>
<body onload="document.form.username.focus();" style="overflow:hidden;">


<!-- Main Container start -->
<div class="dashboard-container">
    <div style="background:url(/components/login/logo13.png) no-repeat;background-size:30% auto;height:100px;background-position-x:90px;"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-sm-4 col-sm-offset-6 denglu">
                <div class="sign-in-container">
                    <form name="form" th:action="@{/auth}" action="/auth" method="POST" class="login-wrapper" style="background:#e3f0ff;border:1px solid #d1e7ff;width:322px;height:350px;">
                        <div style="height:70px;background:url(/components/login/denglu.png) no-repeat;background-size:100% auto;background-position-y:20px;"></div>
                        <div class="content">
                            <div class="form-group controls" style="position: relative;margin-bottom:30px">
                                <img th:src="@{/components/login/account1.png}" style="position: absolute;left:0px;top:0px;width:34px;height:34px"/>
                                <input type="text" class="form-control use" name="username" id="userName" placeholder="请输入用户名"  autocomplete="off" style="border-radius:0px"/>
                            </div>
                            <div class="form-group" style="position: relative;margin-bottom:30px">
                                <img th:src="@{/components/login/password1.png}" style="position: absolute;left:0px;top:0px;width:34px;height:34px"/>
                                <input type="password" class="form-control pass" name="password" id="Password" placeholder="请输入密码" autocomplete="off" style="border-radius:0px"/>
                            </div>
                            <div class="form-group" style="margin-bottom:25px">
                                <div class="row col-md-7">
                                	<input type="text" class="form-control" name="yzm" placeholder="请输入验证码" style="border-radius:0px"/>
                                </div>
                                <div class="row col-md-5" style="margin-left:10px">
                                	<img alt="看不清，换一张" id="validateCodeImg" th:src="@{/admin/draw}" onclick="changeImg(this)"/>
                            	</div>                           	
                            </div>
                            <div th:text="${message}" class="text-center" style="clear:both;color:#ff0000;height:25px;line-height:25px;padding-top:10px"></div>    
                        </div>
                        <div class="actions" style="background:none">
                            <input class="btn btn-primary" name="Login" type="submit" style="background-color:#0075c1;" value="登 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;录"/>
                            <!--<a class="link" href="#">忘记密码？详询请点击</a>-->
                            <div class="clearfix"></div>
                            <br/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Row End -->
    </div>
</div>
<!-- Main Container end -->


